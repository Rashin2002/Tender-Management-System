<Window x:Class="TMS_NET8.View.Tender_Manager.TenderManagerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:md="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
        Title="Tender Manager Dashboard" Height="750" Width="1350"
        WindowStartupLocation="CenterScreen"
        Background="#ECEFF1">
    
    <Grid x:Name="MainContentGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.RowSpan="2" Background="#2C3E50">

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Left"
                        Margin="-15,0,0,0">

                <Image Source="/Assets/DSK LOGO.png" 
                       Height="150" 
                       Width="150"
                       VerticalAlignment="Center"/>

                <TextBlock Text="Enterprises"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="-28,30,0,0"/>
            </StackPanel>

            <!-- Welcome Message -->
            <TextBlock x:Name="lblWelcome"
                       Text="Welcome!"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#3498DB"
                       Margin="20,0,0,20"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>

            <Button Content="Home" Style="{StaticResource MaterialDesignRaisedButton}" Margin="10" Foreground="Black" Background="#3498DB"/>
            <Button Content="Salary Details" Style="{StaticResource MaterialDesignRaisedButton}" Margin="10" Foreground="White" Background="#34495E"/>
            <Button Content="Buying Authority Details" Click ="btnBuyingAuthDetails" Style="{StaticResource MaterialDesignRaisedButton}" Margin="10" Foreground="White" Background="#34495E"/>
            <Button Content="Stock" Style="{StaticResource MaterialDesignRaisedButton}" Margin="10" Foreground="White" Background="#34495E"/>
        </StackPanel>

        <DockPanel Grid.Column="1" Background="#3498DB" LastChildFill="True">

            <Image Source="/Assets/ProfileLogo1.png"
                   DockPanel.Dock="Right"
                   ToolTip="Profile"
                   Height="55"
                   Width="55"
                   Margin="0,0,10,0"
                   VerticalAlignment="Center"/>

            <Button Content="LOGOUT"
                    DockPanel.Dock="Right"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Foreground="White"
                    FontSize="20"
                    FontWeight="Normal"
                    VerticalAlignment="Center"/>

            <TextBlock Text="Tender Management Dashboard"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="20,0"/>

        </DockPanel>

        <Grid  Grid.Row="1" Grid.Column="1" Margin="20">
            <Image Source="/Assets/login_banner.jpeg"
                   Opacity="0.08"
                   Stretch="Uniform"
                   IsHitTestVisible="False"/>

            <Grid Grid.Row="1" Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 🔍 Search & Filters Section -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 x:Name="txtSearch"
                                 materialDesign:HintAssist.Hint="Search Tenders by ID or Title..."
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Foreground="Gray"
                                 materialDesign:HintAssist.Background="#ECEFF1"
                                 VerticalAlignment="Center"
                                 FontSize="16"
                                 FontWeight="Medium"
                                 Margin="0,0,0,0" 
                                 TextChanged="txtSearch_TextChanged" />

                        <Button
                                Height="50"
                                materialDesign:HintAssist.Background="#ECEFF1"
                                Style="{StaticResource MaterialDesignRaisedLightButton}"
                                ToolTip="Execute Search"
                                Click="btnSearch" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="394,3,0,2" Width="62">
                            <materialDesign:PackIcon Kind="Search" Width="30" Height="30"
                                                     materialDesign:HintAssist.Background="#ECEFF1"/>
                        </Button>
                    </Grid>

                    <!-- Tender Issuer Filter -->
                    <ComboBox x:Name="cmbTenderIssuerDashboard"
                              SelectionChanged="cmbTenderIssuerDashboard_SelectionChanged"
                              Grid.Column="2"
                              materialDesign:HintAssist.Hint="Filter by Tender Issuer"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Foreground="Gray"
                              materialDesign:HintAssist.Background="#ECEFF1">
                    </ComboBox>

                    <!-- Tender Status Filter -->
                    <ComboBox x:Name="cmbTenderStatusDashboard"
                              Grid.Column="3"
                              materialDesign:HintAssist.Hint="Filter by Status"
                              SelectionChanged="cmbTenderStatusDashboard_SelectionChanged"
                              Margin="10,0"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Foreground="Gray"
                              materialDesign:HintAssist.Background="#ECEFF1">
                    </ComboBox>

                    <!-- Deadline Filter -->
                    <DatePicker Grid.Column="4"
                                materialDesign:HintAssist.Hint="Deadline"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                materialDesign:HintAssist.Foreground="Gray"
                                materialDesign:HintAssist.Background="#ECEFF1"/>

                    <!-- Refresh Button -->
                    <Button Grid.Column="5"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Refresh Data"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Click="btnRefresh">
                        <materialDesign:PackIcon Kind="Refresh" Height="24" Width="24" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    </Button>
                </Grid>

                <!-- 🏷 Section Title -->
                <TextBlock Grid.Row="1"
                           Text="Active Tenders"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,10"/>

                <!-- 📋 DataGrid -->
                <DataGrid Name="TenderGrid"
                          Grid.Row="2"
                          AutoGenerateColumns="True"
                          BorderBrush="#BDC3C7"
                          Background="Transparent" 
                          MouseDoubleClick="TenderGrid_MouseDoubleClick"
                          materialDesign:DataGridAssist.CellPadding="8"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="10"
                          materialDesign:DataGridAssist.EnableEditBoxAssist="True"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False">
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>

