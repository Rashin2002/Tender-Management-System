<Window x:Class="TenderTestUI.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Login - Tender Management System"
        Height="450" Width="750"
        WindowStartupLocation="CenterScreen"
        
        Background="#ECEFF1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Left side for image -->
            <ColumnDefinition Width="3*"/>
            <!-- Right side for form -->
        </Grid.ColumnDefinitions>

        <!-- Left Image -->
        <Border Grid.Column="0" Background="White">
            <Image Source="Assets/login_banner.jpg" IsEnabled="False" Stretch="UniformToFill" Margin="-70,0,0,0"/>
        </Border>

        <!-- Right Form -->
        <Grid Grid.Column="1" Margin="50" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,20,0,30" HorizontalAlignment="Center">
                <TextBlock Text="Tender Management System"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Sign in to continue"
                           FontSize="14"
                           Foreground="#7F8C8D"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Form -->
            <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="10,0,10,0">
                <!-- Username -->
                <TextBox x:Name="txtUsername" 
                         Margin="0,0,0,15"
                         materialDesign:HintAssist.Hint="Username"
                         materialDesign:HintAssist.Foreground="Gray"
                         materialDesign:HintAssist.Background="#ECEFF1"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="14"
                         Padding="10"/>

                <!-- Password -->
                <PasswordBox x:Name="txtPassword"
                             Margin="0,0,0,25"
                             materialDesign:HintAssist.Hint="Password"
                             materialDesign:HintAssist.Foreground="Gray"
                             materialDesign:HintAssist.Background="#ECEFF1"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             FontSize="14"
                             Padding="10"/>

                <!-- Login Button -->
                <Button Content="Login"
                        Height="40"
                        Background="#3498DB"
                        Foreground="White"
                        FontSize="16"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="Login_Click"/>

                <!-- Forgot Password -->
                <TextBlock Text="Forgot Password?"
                           Foreground="#3498DB"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"
                           Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
